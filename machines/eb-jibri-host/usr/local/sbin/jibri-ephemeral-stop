#!/usr/bin/bash

# ------------------------------------------------------------------------------
# JIBRI-EPHEMERAL-STOP
# ------------------------------------------------------------------------------
#
# Stop the ephemeral Jibri containers.
#
# ------------------------------------------------------------------------------
lxc-autostart -s -g eb-jibri -t 30
lxc-autostart -k -g eb-jibri

for i in $(seq 10); do
    sleep 1
    [[ -z "$(lxc-ls -1g eb-jibri | grep -v eb-jibri-template)" ]] && exit 0
done
